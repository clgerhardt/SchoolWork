	// JLabel l = new JLabel("Label");
	// l.setBackground(Color.MAGENTA);
	//
	// f.setVisible(true);
	// f.setSize(600,400);
	//
	// newPanel.setBackground(Color.DARK_GRAY);
	//
	// newPanel.add(b,l);
	//
	// f.add(newPanel,BorderLayout.SOUTH);
	//
	// }
	
	
}